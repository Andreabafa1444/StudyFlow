@model List<StudyFlow.Models.ViewModels.SubjectCardVM>

<div class="main-container">

    <div class="welcome-section">
        <h2 class="page-title">My Subjects</h2>
        <p class="page-subtitle">Track your academic progress and evaluations</p>
    </div>

    <a asp-action="Create" class="btn-add-subject">+ Add Subject</a>

    <div class="subjects-grid">
        @if (!Model.Any())
        {
            <div class="empty-text">No subjects yet.</div>
        }
        else
        {
            foreach (var subject in Model)
            {
                <div class="subject-card">
                    <div class="card-header bg-blue"></div>

                    <div class="card-content">
                        <div class="card-top">
                            <div>
                                <h3 class="subject-name">@subject.Name</h3>
                                <p class="subject-credits">Credits: @subject.Credits</p>
                            </div>
                            <div class="subject-icon bg-blue">ðŸ“˜</div>
                        </div>

                        <div class="card-stats">
                            <span>@subject.EvaluationsCount evaluations</span>
                            <span class="avg-value">
                                Avg: @subject.Average.ToString("0.##")%
                            </span>
                        </div>

                        <a asp-action="Details"
                           asp-route-id="@subject.Id"
                           class="btn-view-details">
                            View details â†’
                        </a>
                    </div>
                </div>
            }
        }
    </div>
</div>
